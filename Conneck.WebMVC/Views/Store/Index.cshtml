@model IEnumerable<Conneck.Models.StoreList>

@{
    ViewBag.Title = "Index";
}

<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Store List</h2>
        </div>
        <div class="col-6 text-right">
            <a href="@Url.Action("Create", "Store")" class="btn btn-info">
                <i class="fas fa-plus"></i>
                <span>
                    Create new Store
                </span>
            </a>
        </div>
    </div>

    <div>
        <table class="table table-striped border">
            <tr class="table-secondary">
                <th>
                    @Html.DisplayNameFor(model => model.StoreID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.StoreID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td style="width:150px;">
                        <div class="btn-group" role="group">
                            @Html.ActionLink("Edit", "Edit", new { storeID = item.StoreID }, htmlAttributes: new { @class = "btn btn-primary text-white" })
                            @Html.ActionLink("Details", "Detail", new { storeID = item.StoreID }, htmlAttributes: new { @class = "btn btn-success text-white" })
                            @Html.ActionLink("Delete", "Delete", new { storeID = item.StoreID }, htmlAttributes: new { @class = "btn btn-danger text-white" })
                        </div>

                    </td>
                </tr>
            }
        </table>

    </div>
</div>
